<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <property name="HOME-LOG" value="log/app.log"/>


    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %d{HH:mm.SSS} [%t] %-5level %logger{36} - %msg%n
            </Pattern>
        </layout>
    </appender>


    <appender name="FILE" class="ch.qos.logback.core.FileAppender">

        <file>${HOME_LOG}</file>
        <append>false</append>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %d{HH:mm.SSfS} [%t] %-5level %logger{36} - %msg%n
            </Pattern>
        </layout>
    </appender>



    <root level="info">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration>